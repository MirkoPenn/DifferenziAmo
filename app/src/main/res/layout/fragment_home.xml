    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2"
        android:layout_below="@id/tv_benvenuto"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/ll_firstrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bt_calendario"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bt_calendario" />

                <ImageView
                    android:id="@+id/bt_dovelobutto"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bt_dovelobutto" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_secondrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@id/ll_firstrow">

                <ImageView
                    android:id="@+id/bt_dovesitrova"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bt_dovesitrova" />

                <ImageView
                    android:id="@+id/bt_servizi"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bt_servizi" />

            </LinearLayout>

    </LinearLayout>
</RelativeLayout>