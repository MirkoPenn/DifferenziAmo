<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.differenziamo.MainActivity" >

    <ListView
        android:id="@+id/listView_dovelobutto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_search_dovelobutto"
        android:layout_centerHorizontal="true" >

    </ListView>

    <EditText
        android:id="@+id/editText_search_dovelobutto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:hint="@string/dovelobutto_cerca"
        android:imeOptions="actionDone" >

        <requestFocus />
    </EditText>

</RelativeLayout>
